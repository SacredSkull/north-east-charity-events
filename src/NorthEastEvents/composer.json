{
    "repositories":[
      {
        "type": "vcs",
        "url": "https://github.com/thinksalot/Slim-Flash"
      }
    ],
    "require": {
        "slim/slim": "^3.0",
        "twig/twig": "~1.0",
        "monolog/monolog": "^1.17",
        "propel/propel": "~2.0@dev",
        "slim/twig-view": "^2.0",
        "fzaninotto/faker": "^1.5",
        "kzykhys/ciconia": "~1.0.0",
        "aura/session": "^2.0",
        "slim/flash": "dev-flash-current-request"
    },

    "require-dev":{
        "phpunit/phpunit": "5.2.10",
        "phpmd/phpmd" : "@stable",
		"guzzlehttp/guzzle": "~6.0",
        "codeclimate/php-test-reporter": "^0.3.0",
		"raveren/kint": "^1.0"
    },

    "autoload": {
        "psr-0": {
            "NorthEastEvents\\Tests\\": "../../tests/"
        },
        "psr-4": {
            "NorthEastEvents\\Models\\": "Models/",
            "NorthEastEvents\\Middleware\\": "Middleware/",
            "NorthEastEvents\\Controllers\\": "Controllers/"
        }
    }
}
