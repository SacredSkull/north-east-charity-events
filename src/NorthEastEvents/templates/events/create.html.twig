{% extends "skeleton.html.twig" %}
{% block javascript %}
    
{% endblock javascript %}
{% block body %}
<!--Start content -->
<div class="row">
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading"  style="text-align: center">Add a new event</div>
        <div class="panel-body">
            <form role="form" action="" method="post" >
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="inputTitle">Title</label>
                        <div class="input-group">
                            <input type="text" value="{{ previous_details.title }}" class="form-control" name="title" id="inputTitle" placeholder="Enter Event Title" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputHost">Host</label>
                        <div class="input-group">
                            <select name="charityID" class="form-control" id="inputHost" required>
                                {% for charity in charities %}
                                    <option value="{{ charity.getId }}" {% if previous_details.CharityID == charity.getId %}selected{% endif %}>{{ charity.getName }}</option>
                                {% endfor %}
                            </select>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputImage">Image</label>
                        <div class="input-group">
                            <input value="{{ previous_details.imageUrl }}" type="text" class="form-control" name="imageUrl" id="inputImage" placeholder="Enter Event Image" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputDate">Date</label>
                        <div class="input-group">
                            <input value="{{ previous_details.date|date("H:i d/m/Y") }}" type="text" class="form-control" name="date" id="inputDate" placeholder="Enter Event Date" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputLocation">Location</label>
                        <div class="input-group">
                            <input value="{{ previous_details.location }}" type="text" class="form-control" name="location" id="inputLocation" placeholder="Enter Event Location" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputBody">Description</label>
                        <div class="input-group"
                            >
                            <textarea  name="body" id="inputBody" class="form-control" rows="5" required>{{ previous_details.body }}</textarea>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputCapacity">Capacity</label>
                        <div class="input-group">
                            <input type="text" value="{{ previous_details.tickets }}" class="form-control" name="tickets" id="inputCapacity" placeholder="Enter Event Capacity" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputMedia">Media</label>
                        <div class="input-group">
                            <input type="text" value="{{ previous_details.videoUrl }}" class="form-control" name="videoUrl" id="inputMedia" placeholder="Youtube Embed Link" required>
                            <span class="input-group-addon"><i class="glyphicon glyphicon-ok form-control-feedback"></i></span>
                        </div>
                    </div>
                    <input type="submit" name="submit" id="submit" value="Submit" class="btn btn-info pull-right">
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock body %}